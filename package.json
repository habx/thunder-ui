{
  "name": "@habx/lib-client-backoffx",
  "version": "2.7.0",
  "description": "UI Library for client-crm-v2 and client-housings",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./typings/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf ./lib && rimraf ./typings",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./assets",
    "storybook:build": "build-storybook -c .storybook -s ./assets -o .storybook-static",
    "install:local": "npm ci && npm link styled-components && npm link react && npm link react-dom",
    "test": "jest",
    "test:update": "jest -u",
    "lint": "tslint -p tsconfig.json",
    "type-check": "tsc --noEmit -p"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/habx/lib-client-backoffx.git"
  },
  "author": "Habx Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/habx/lib-client-backoffx/issues"
  },
  "homepage": "https://github.com/habx/lib-client-backoffx#readme",
  "dependencies": {
    "clean-tag": "^2.0.2",
    "color": "^3.1.0",
    "rc-slider": "^8.6.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.7",
    "@storybook/addon-centered": "^4.0.7",
    "@storybook/addon-knobs": "^4.0.7",
    "@storybook/addon-storyshots": "^4.1.2",
    "@storybook/react": "^4.0.7",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.118",
    "@types/react": "^16.7.0",
    "@types/react-dom": "^16.0.11",
    "@types/storybook__react": "^4.0.0",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.1",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.3.1",
    "lodash": "^4.17.11",
    "react": "16.3.0 - 16.7.X",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "16.3.0 - 16.7.X",
    "react-test-renderer": "^16.6.3",
    "recompose": "^0.30.0",
    "rimraf": "^2.6.2",
    "styled-components": "^4.1.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/assets"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
