{
  "name": "@habx/thunder-ui",
  "version": "3.2.2",
  "description": "Flawless Prototyping React library",
  "sideEffects": false,
  "main": "./index.js",
  "types": "./typings/index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && tsc  -p ./tsconfig.json",
    "build:watch": "tsc --watch",
    "deploy-storybook": "storybook-to-ghpages -s storybook:build",
    "postbuild": "node ./scripts/postbuild.js",
    "publish": "cd lib && npm publish && cd ..",
    "build:local": "rimraf ./lib && npm run build",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./assets",
    "storybook:build": "build-storybook -c .storybook -s ./assets -o .storybook-static",
    "test": "jest",
    "lint": "tslint -p tsconfig.json",
    "type-check": "tsc --noEmit -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/habx/thunder-ui.git"
  },
  "author": "Habx Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/habx/thunder-ui/issues"
  },
  "homepage": "https://github.com/habx/thunder-ui#readme",
  "dependencies": {
    "clean-tag": "^2.0.3",
    "color": "^3.1.0",
    "lodash.deburr": "^4.1.0",
    "lodash.clone": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.has": "^4.5.2",
    "lodash.memoize": "^4.1.2",
    "lodash.merge": "^4.6.1",
    "rc-slider": "^8.6.3",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=4.1.3",
    "use-onclickoutside": "^0.3.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.7",
    "@storybook/addon-centered": "^4.0.7",
    "@storybook/addon-info": "^4.1.7",
    "@storybook/addon-knobs": "^4.0.7",
    "@storybook/addon-storysource": "^4.1.7",
    "@storybook/addon-viewport": "^4.1.12",
    "@storybook/react": "^4.1.7",
    "@storybook/storybook-deployer": "^2.8.1",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.118",
    "@types/react": "16.7.0",
    "@types/react-dom": "16.0.11",
    "@types/storybook__react": "^4.0.0",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "jest": "^23.6.0",
    "lodash": "^4.17.0",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-test-renderer": "^16.6.3",
    "recompose": "^0.30.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/assets"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/jest.ts"
  }
}
